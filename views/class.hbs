<h2>{{className}} Class</h2>

<h3>Weapons</h3>
<p><a href="/add/weapon">➕ Add New Weapon</a></p>
<ul>
  {{#each weapons}}
    <li>
      <strong>{{name}}</strong> - {{description}}
      {{#if image_url}}
        <br><img src="{{image_url}}" alt="{{name}}" width="150">
      {{/if}}

      <div style="margin-top:5px;">
        <a href="/weapons/{{id}}/edit">✏️ Edit</a>
        <form action="/weapons/{{id}}/delete" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Delete this weapon?')">🗑 Delete</button>
        </form>
      </div>
    </li>
  {{/each}}
  {{#unless weapons}}
    <li>No weapons for this class.</li>
  {{/unless}}
</ul>

