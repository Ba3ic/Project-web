<h2>{{title}}</h2>

{{!-- Use enctype only when needed --}}
{{#if (eq type "user")}}
<form action="/add/{{type}}" method="POST">
{{else}}
<form action="/add/{{type}}" method="POST" enctype="multipart/form-data">
{{/if}}

  {{#if (eq type "user")}}
    <label>Username:</label><br>
    <input type="text" name="username" required><br><br>

    <label>Password:</label><br>
    <input type="password" name="password" required><br><br>

  {{else}}
    <label>Name:</label><br>
    <input type="text" name="name" required><br><br>

    <label>Description:</label><br>
    <textarea name="description" rows="4" cols="40"></textarea><br><br>

    {{!-- Image upload for weapons, gadgets, maps, specializations --}}
    <label>Upload Image:</label><br>
    <input type="file" name="image_file" accept=".png,.jpg,.jpeg"><br><br>

    {{#if showClass}}
      <label>Class:</label><br>
      <select name="class" required>
        <option value="Light">Light</option>
        <option value="Medium">Medium</option>
        <option value="Heavy">Heavy</option>
      </select><br><br>
    {{/if}}

    {{#if (eq type "weapon")}}
      <label>Damage:</label><br>
      <input type="number" name="damage" required><br><br>
    {{/if}}
  {{/if}}

  <button type="submit">Save</button>
</form>

{{#if users}}
  <h3>All Users</h3>
  <ul>
    {{#each users}}
      <li>
        <strong>{{username}}</strong>
        <a href="/users/{{id}}/edit">‚úèÔ∏è Edit</a>
        <form action="/users/{{id}}/delete" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Delete this user?')">üóë Delete</button>
        </form>
      </li>
    {{/each}}
  </ul>
{{/if}}
